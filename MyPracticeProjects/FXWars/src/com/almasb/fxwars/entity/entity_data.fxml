<Pane xmlns:fx="http://javafx.com/fxml">
    <fx:define>
    
        <EntityData fx:id="dataPlayer" speed="5">
            <geometry>
                <GeometryData width="20" height="20">
                    <type>
                        <BBoxType fx:value="CIRCLE" />
                    </type>
                </GeometryData>
            </geometry>
            <visual>
                <VisualData>
                    <type>
                        <VisualType fx:value="ELLIPSE" />
                    </type>
                    <color>
                        <Color red="0" green="0" blue="1" />
                    </color>
                </VisualData>
            </visual>
        </EntityData>
        
        <EntityData fx:id="dataBullet" speed="10">
            <geometry>
                <GeometryData width="10" height="1">
                    <type>
                        <BBoxType fx:value="LINE" />
                    </type>
                </GeometryData>
            </geometry>
            <visual>
                <VisualData>
                    <type>
                        <VisualType fx:value="LINE" />
                    </type>
                    <color>
                        <Color red="0" green="1" blue="1" />
                    </color>
                </VisualData>
            </visual>
        </EntityData>
        
        <EntityData fx:id="dataEnemyWanderer" speed="5">
            <geometry>
                <GeometryData width="40" height="40">
                    <type>
                        <BBoxType fx:value="BOX" />
                    </type>
                </GeometryData>
            </geometry>
            <visual>
                <VisualData>
                    <type>
                        <VisualType fx:value="RECTANGLE" />
                    </type>
                    <color>
                        <Color red="0.29" green="0.9" blue="0.1" />
                    </color>
                </VisualData>
            </visual>
        </EntityData>
        
        <EntityData fx:id="dataEnemySeeker" speed="2">
            <geometry>
                <GeometryData width="30" height="30">
                    <type>
                        <BBoxType fx:value="BOX" />
                    </type>
                </GeometryData>
            </geometry>
            <visual>
                <VisualData>
                    <type>
                        <VisualType fx:value="RECTANGLE" />
                    </type>
                    <color>
                        <Color red="1" green="0" blue="0" />
                    </color>
                </VisualData>
            </visual>
        </EntityData>
        
        <EntityData fx:id="dataPowerup" speed="2">
            <geometry>
                <GeometryData width="20" height="20">
                    <type>
                        <BBoxType fx:value="BOX" />
                    </type>
                </GeometryData>
            </geometry>
            <visual>
                <VisualData>
                    <type>
                        <VisualType fx:value="RECTANGLE" />
                    </type>
                    <color>
                        <Color red="1" green="1" blue="1" />
                    </color>
                </VisualData>
            </visual>
        </EntityData>
        
    </fx:define>    
</Pane>