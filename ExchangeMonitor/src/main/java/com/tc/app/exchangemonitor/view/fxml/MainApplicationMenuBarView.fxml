<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>

<HBox spacing="10.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tc.app.exchangemonitor.controller.MainApplicationMenuBarController">
<children>
	<MenuBar>
		<menus>
			<Menu mnemonicParsing="false" text="File">
				<items>
					<MenuItem mnemonicParsing="false" text="Close"  accelerator="Shortcut+S"/>
				</items>
			</Menu>
			
			<Menu mnemonicParsing="false" text="Edit">
				<items>
					<MenuItem mnemonicParsing="false" text="Delete" />
				</items>
			</Menu>
			
			<Menu mnemonicParsing="false" text="Help">
				<items>
					<MenuItem mnemonicParsing="false" text="About" />
				</items>
			</Menu>
		</menus>
	</MenuBar>
	
	<Region HBox.hgrow="ALWAYS" />
	<Label fx:id="currentDateTimeLabel" prefHeight="25.0" text="Current Date Time Goes Here..."  styleClass="applicationMainWindowCurrentDateTimeLabelStyle"/>
	<Region HBox.hgrow="NEVER" />
</children>
</HBox>